<div class="card-section">
  <div class="card-container">
    <div class="content">
      <p class="card-headline">Edit Profile:</p>
      <div class="content-form">

        <div class="input-container">
          <form {{action "saveProfile" on="submit"}} action="save-profile" on="submit" class="input-container">
            {{input value=model.name class="content-form__input" type="text" placeholder="Name"}} {{input value=model.email class="content-form__input" type="text" placeholder="Email"}}
            {{input value=model.ageRange class="content-form__input" type="text" placeholder="Age Range"}}
            <select class="content-form__input" type="text" placeholder="Gender" onchange= {{action (mut model.gender) value="target.value"}}>
                <option class="content-form__option" value="Male">Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
              </select> {{input value=model.zipCode class="content-form__input" type="text" placeholder="Location"}}
            <textarea id="bio" class="content-form__input" name="name" rows="8" maxlength="500" placeholder="Bio"></textarea> {{input value=model.activities class="content-form__input" type="text" placeholder="Activities"}} {{input value=model.availability
            class="content-form__input" type="text" placeholder="Availability"}}
            <button {{action "saveProfile"}} class="content-form__submit">Save Changes</button>
          </form>
        </div>

      </div>
    </div>
  </div>
</div>
